{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES6"],
    "noEmitOnError": false,
    "module": "NodeNext",
    "rootDir": "./src",
    "noEmit": true,
    "resolveJsonModule": true,

    "allowJs": true,

    "sourceMap": false,

    "outDir": "./build",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*",
    "index"
  ],
  "exclude": ["node_modules"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  },
  "execMap": {
    "ts": "ts-node"
  },
  "rules": {
    "no-non-null-assertion": false
  }
}
